<div class="dropbox" id="dropbox">
    <ul>
        <li>
            <div id="trigger">
                    <ul id="hidden">
                        <li class="notice_card first"></li>
                        {{#each notification}}
                        <li class="notice_card">
                                <div class="notice_container">
                                    <div class="auth_icon">
                                        <img src="{{avatar}}" alt="">
                                    </div>
                                    <div class="right_container">
                                        <a href="./goNotificationDetail?userId={{userId}}&type={{type}}&content={{typeId}}&notificationId={{id}}" class="message">{{title}}</a>
                                        <div class="timestamp">{{time}}</div>
                                    </div>
                                </div>
                        </li>
                        {{/each}}
                    </ul>
                
            </div>
        </li>
    </ul>
</div>