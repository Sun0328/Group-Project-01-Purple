<link rel="stylesheet" href="/css/uploadImage.css">

<div class="upload_container">
    <div class="back_container">
        <a href="../userHomePage" id="back">Back</a>
    </div>

    <div class="img_container">
        <h3 id="upload_text">Image uploads!</h3>

        <div class="card">
            <div class="card-body">
                <form action="./uploadImage" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="user_id" id="user_id" value="{{user_id}}">
                    <div class="form-group">
                        <label for="inpFile">Upload an image here!</label>
                        <input id="inpFile" type="file" name="imageFile" accept=".png,.jpg,.jpeg,.bmp" required>

                    </div>

                    <div class="form-group align-start">
                        <button type="submit" id="upload_btn">Upload!</button>
                    </div>

                </form>
            </div>
        </div>

    </div>

</div>